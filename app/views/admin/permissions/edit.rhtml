<%# if current_user.admin? %>
	<div class="adminFont adminPadding">
		<%= error_messages_for :permission %>
		<% form_for :permission, @permission, :url => admin_permission_path, :html => { :method => :put } do |f| -%>
			<%= render :partial => f %>
			<p><%= submit_tag 'Update' %></p>
		<% end -%>
	</div>
<%# end %>