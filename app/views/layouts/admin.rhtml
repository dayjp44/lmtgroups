<html>
	<head>
		<title>LMTGroups.com</title>
		<%= stylesheet_link_tag 'site' %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		<table width="100%" cellpadding="0" cellspacing="0" border="0" class="sitefont">
			<tr>
				<td align="center">
					<div id="container">
						<div id="header">
							<%= render :partial => 'partials/admin_header' %>
						</div>
						<div id="contents" style="margin:5px 0px 5px 0px;">
							<div class="indexBorder">
								<div style="padding:10px;">
									<%= @content_for_layout %>
								</div>
							</div>
						</div>
						<div id="footer">
							<%= render :partial => 'partials/footer' %>
						</div>
					</div>
				</td>
			</tr>
		</table>
	</body>
</html>